# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Получите chat_id отправив сообщение боту и проверив https://api.telegram.org/bot<YOUR_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Server Configuration
PORT=8080
NODE_ENV=development

# Security
# Сгенерируйте случайные строки для продакшена
SESSION_SECRET=your-super-secure-session-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-too

# Admin Panel
ADMIN_USERNAME=admin
# Сгенерируйте хэш пароля с помощью: node generate-password.js
ADMIN_PASSWORD_HASH=your_password_hash_here